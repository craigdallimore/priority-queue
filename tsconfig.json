{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "target": "es2016",
    "lib": ["es6"],
    "module": "esnext",
    "rootDir": "src",
    "baseUrl": "src",
    "noImplicitAny": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
